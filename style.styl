.map
    height 300px
    width 430px

.ui-distance
    position absolute
    bottom 10px
    left 10px
    padding 5px 10px
    background rgba(0, 0, 0, 0.5)
    color #fff
    font-size 11px
    line-height 18px
    border-radius 3px

.info
    padding 6px 8px
    font 14px/16px Arial, Helvetica, sans-serif
    background white
    background rgba(255, 255, 255, 0.8)
    box-shadow 0 0 15px rgba(0, 0, 0, 0.2)
    border-radius 5px

.info h4
    margin 0 0 5px
    color #777
